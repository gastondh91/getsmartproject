{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "react/prop-types": [0],
        "react/destructuring-assignment" : [0],
        "no-const-assign": [0],
        "max-len": [0],
        "react/no-array-index-key": [0],
        "no-use-before-define": [0],
        "no-console": [0]
    }
}